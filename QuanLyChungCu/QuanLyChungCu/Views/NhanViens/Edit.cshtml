@model QuanLyChungCu.Models.NhanVien

@{
    ViewData["Title"] = "Edit";
    Layout = "_ManagerLayout";
}

<div class="container">
    <h1>Chỉnh sửa nhân viên</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin nhân viên</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdNhanVien" />
                        <div class="form-group row">
                            <label asp-for="IdNhanVien" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="IdNhanVien" class="form-control" />
                                <span asp-validation-for="IdNhanVien" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="TenNhanVien" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="TenNhanVien" class="form-control" />
                                <span asp-validation-for="TenNhanVien" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="GioiTinh" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="GioiTinh" class="form-control" />
                                <span asp-validation-for="GioiTinh" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NgaySinh" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="NgaySinh" class="form-control" />
                                <span asp-validation-for="NgaySinh" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Sdt" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Sdt" class="form-control" />
                                <span asp-validation-for="Sdt" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DiaChi" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="DiaChi" class="form-control" />
                                <span asp-validation-for="DiaChi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IdTaiKhoan" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="IdTaiKhoan" class="form-control" />
                                <span asp-validation-for="IdTaiKhoan" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-8 offset-sm-4">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
