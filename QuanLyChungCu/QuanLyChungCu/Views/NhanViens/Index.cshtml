@model IEnumerable<QuanLyChungCu.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "_ManagerLayout";
}

<style>
    /* Hiệu ứng cho các thẻ a */
    .table a {
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .table a:hover {
            transform: scale(1.1);
            text-decoration: none;
        }

    /* Hiệu ứng cho các hàng của bảng */
    .table tbody tr {
        transition: background-color 0.3s ease;
    }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

</style>

<h1 class="mt-3">@ViewData["Title"]</h1>

<p class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-hover mt-3">
    <thead class="thead-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentSortOrder="@ViewData["CurrentSortOrder"]">@Html.DisplayNameFor(model => model.IdNhanVien)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentSortOrder="@ViewData["CurrentSortOrder"]">@Html.DisplayNameFor(model => model.TenNhanVien)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentSortOrder="@ViewData["CurrentSortOrder"]">@Html.DisplayNameFor(model => model.GioiTinh)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentSortOrder="@ViewData["CurrentSortOrder"]">@Html.DisplayNameFor(model => model.NgaySinh)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sdt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTaiKhoan)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdNhanVien)</td>
                <td>@Html.DisplayFor(modelItem => item.TenNhanVien)</td>
                <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                <td>@Html.DisplayFor(modelItem => item.Sdt)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                <td>@Html.DisplayFor(modelItem => item.IdTaiKhoan)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdNhanVien" class="btn btn-sm btn-warning me-2">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdNhanVien" class="btn btn-sm btn-info me-2">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdNhanVien" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
