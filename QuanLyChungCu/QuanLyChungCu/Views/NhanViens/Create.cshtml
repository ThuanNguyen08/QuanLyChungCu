@model NhanVien

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Tạo mới nhân viên</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin nhân viên</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="IdNhanVien" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="IdNhanVien" class="form-control" />
                        <span asp-validation-for="IdNhanVien" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="TenNhanVien" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="TenNhanVien" class="form-control" />
                        <span asp-validation-for="TenNhanVien" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="GioiTinh" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="GioiTinh" class="form-control" />
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="NgaySinh" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="NgaySinh" class="form-control" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Sdt" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Sdt" class="form-control" />
                        <span asp-validation-for="Sdt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DiaChi" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdTaiKhoan" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="IdTaiKhoan" class="form-control" />
                        <span asp-validation-for="IdTaiKhoan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Tạo</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>


