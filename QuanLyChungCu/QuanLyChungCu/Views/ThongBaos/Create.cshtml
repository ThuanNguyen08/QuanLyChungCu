@model QuanLyChungCu.Models.ThongBao

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Tạo mới thông báo</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin thông báo</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
                    <div class="col-sm-10">
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="TieuDe" class="col-sm-2 col-form-label">Tiêu đề</label>
                    <div class="col-sm-10">
                        <input asp-for="TieuDe" class="form-control" />
                        <span asp-validation-for="TieuDe" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="NoiDung" class="col-sm-2 col-form-label">Nội dung</label>
                    <div class="col-sm-10">
                        <input asp-for="NoiDung" class="form-control" />
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="NgayGui" class="col-sm-2 col-form-label">Ngày gửi</label>
                    <div class="col-sm-10">
                        <input asp-for="NgayGui" class="form-control" />
                        <span asp-validation-for="NgayGui" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdNguoiGui" class="col-sm-2 col-form-label">ID người gửi</label>
                    <div class="col-sm-10">
                        <input asp-for="IdNguoiGui" class="form-control" />
                        <span asp-validation-for="IdNguoiGui" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdNguoiNhan" class="col-sm-2 col-form-label">ID người nhận</label>
                    <div class="col-sm-10">
                        <input asp-for="IdNguoiNhan" class="form-control" />
                        <span asp-validation-for="IdNguoiNhan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
