@model QuanLyChungCu.Models.ThongBao

@{
    ViewData["Title"] = "Delete";
    Layout = "_ManagerLayout";
}

<style>
    .delete-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .delete-page h1 {
            text-align: center;
            color: #d9534f;
        }

        .delete-page h3 {
            text-align: center;
            color: #333;
        }

        .delete-page h4 {
            text-align: center;
            color: #5bc0de;
        }

        .delete-page dl {
            margin-bottom: 20px;
        }

        .delete-page dt {
            font-weight: bold;
            color: #555;
        }

        .delete-page dd {
            margin-bottom: 10px;
            color: #333;
        }

        .delete-page form {
            text-align: center;
        }

        .delete-page .btn-danger {
            margin-right: 10px;
        }
</style>

<div class="delete-page">
    <h1>Delete</h1>
    <h3>Có chắc muốn xóa thông báo này không?</h3>
    <div>
        <h4>Thông báo</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TieuDe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TieuDe)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoiDung)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoiDung)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NgayGui)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NgayGui)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdNguoiGui)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdNguoiGui)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdNguoiNhan)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdNguoiNhan)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
