@model QuanLyChungCu.Models.ThongBao

@{
    ViewData["Title"] = "Edit";
    Layout = "_ManagerLayout";
}

<div class="container">
    <h1>Chỉnh sửa thông báo</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin thông báo</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group row">    
                            <label asp-for="Id" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="TieuDe" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="TieuDe" class="form-control" />
                                <span asp-validation-for="TieuDe" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NoiDung" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="NoiDung" class="form-control" />
                                <span asp-validation-for="NoiDung" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NgayGui" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="NgayGui" class="form-control" />
                                <span asp-validation-for="NgayGui" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IdNguoiGui" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="IdNguoiGui" class="form-control" />
                                <span asp-validation-for="IdNguoiGui" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IdNguoiNhan" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="IdNguoiNhan" class="form-control" />
                                <span asp-validation-for="IdNguoiNhan" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-8 offset-sm-4">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
