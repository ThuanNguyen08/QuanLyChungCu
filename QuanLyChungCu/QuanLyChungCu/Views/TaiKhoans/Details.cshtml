@model QuanLyChungCu.Models.TaiKhoan

@{
    ViewData["Title"] = "Details";
    Layout = "_ManagerLayout";
}

<style>
    .container {
        margin-top: 50px;
    }

    .details-container {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 20px;
    }

        .details-container h1 {
            margin-bottom: 20px;
        }

        .details-container dl dt {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .details-container dl dd {
            margin-bottom: 10px;
        }

        .details-container a {
            margin-right: 10px;
        }
</style>

<div class="container">
    <div class="details-container">
        <h1>Details</h1>

        <div>
            <h4>Tài Khoản</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdTaiKhoan)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdTaiKhoan)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TenDangNhap)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TenDangNhap)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MatKhau)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VaiTro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VaiTro)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.IdTaiKhoan">Edit</a>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
