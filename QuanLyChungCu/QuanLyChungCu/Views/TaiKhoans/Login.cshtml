@using QuanLyChungCu.Models

@{
    ViewData["Title"] = "Đăng nhập";
}

@model TaiKhoan

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 400px;
        margin: 100px auto;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .form-control {
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .btn-primary {
        border-radius: 5px;
    }

    .alert-danger {
        margin-top: 20px;
    }
</style>

<div class="container">
    <h2 class="text-center">Đăng nhập</h2>

    <form asp-controller="TaiKhoans" asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="TenDangNhap">Tên đăng nhập</label>
            <input asp-for="TenDangNhap" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="MatKhau">Mật khẩu</label>
            <input asp-for="MatKhau" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
    {
        <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
    }
</div>
