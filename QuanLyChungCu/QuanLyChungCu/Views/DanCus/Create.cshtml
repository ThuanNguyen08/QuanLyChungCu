@model QuanLyChungCu.Models.DanCu

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Tạo mới dân cư</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin dân cư</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="form-group row">
                    <label asp-for="IdDanCu" class="col-sm-2 col-form-label">ID Dân cư</label>
                    <div class="col-sm-10">
                        <input asp-for="IdDanCu" class="form-control" />
                        <span asp-validation-for="IdDanCu" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="HoTen" class="col-sm-2 col-form-label">Họ tên</label>
                    <div class="col-sm-10">
                        <input asp-for="HoTen" class="form-control" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="NgaySinh" class="col-sm-2 col-form-label">Ngày sinh</label>
                    <div class="col-sm-10">
                        <input asp-for="NgaySinh" class="form-control" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="GioiTinh" class="col-sm-2 col-form-label">Giới tính</label>
                    <div class="col-sm-10">
                        <input asp-for="GioiTinh" class="form-control" />
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Sdt" class="col-sm-2 col-form-label">Số điện thoại</label>
                    <div class="col-sm-10">
                        <input asp-for="Sdt" class="form-control" />
                        <span asp-validation-for="Sdt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DiaChi" class="col-sm-2 col-form-label">Địa chỉ</label>
                    <div class="col-sm-10">
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="VaiTro" class="col-sm-2 col-form-label">Vai trò</label>
                    <div class="col-sm-10">
                        <input asp-for="VaiTro" class="form-control" />
                        <span asp-validation-for="VaiTro" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdCanHo" class="col-sm-2 col-form-label">ID Căn hộ</label>
                    <div class="col-sm-10">
                        <input asp-for="IdCanHo" class="form-control" />
                        <span asp-validation-for="IdCanHo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Tạo</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay</a>
                </div>
            </form>
        </div>
    </div>
</div>