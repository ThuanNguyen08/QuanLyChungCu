<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] QuanLyChungCu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyChungCu.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="#" id="menuToggle" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Quản lý chung cư</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <!-- Manager menu items -->
                        <li class="nav-item">
                            <a asp-controller="Manager" asp-action="Index" asp-route-manager="1" class="nav-link align-middle px-0 text-white">
                                <i class="bi bi-house-fill"></i><span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="NhanViens" asp-action="Index" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-people-fill"></i><span class="ms-1 d-none d-sm-inline">Nhân Viên</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DanCus" asp-action="Index" asp-route-manager="1" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-person-circle"></i><span class="ms-1 d-none d-sm-inline">Dân Cư</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="CanHoes" asp-action="Index" asp-route-manager="1" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-building"></i><span class="ms-1 d-none d-sm-inline">Căn Hộ</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="HopDongs" asp-action="Index" asp-route-manager="1" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-card-list"></i><span class="ms-1 d-none d-sm-inline">Hợp Đồng</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="ThuPhis" asp-action="Index" asp-route-manager="1" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-receipt"></i><span class="ms-1 d-none d-sm-inline">Hóa Đơn</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="ThongBaos" asp-action="Index" asp-route-manager="1" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-flag"></i><span class="ms-1 d-none d-sm-inline">Thông Báo</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="SuCoes" asp-action="Index" asp-route-manager="1" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-flag"></i><span class="ms-1 d-none d-sm-inline">Sự cố</span>
                            </a>
                        </li>

                        <li>
                            <a href="#submenu6" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-file-ruled"></i><span class="ms-1 d-none d-sm-inline">Tiện Ích</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu6" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-controller="TienIches" asp-action="Index" class="nav-link px-0 align-middle text-white">
                                        <i class="bi bi-file-ruled-fill"></i><span class="ms-1 d-none d-sm-inline">Phòng GYM</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="TienIches" asp-action="Index" class="nav-link px-0 align-middle text-white">
                                        <i class="bi bi-file-ruled-fill"></i><span class="ms-1 d-none d-sm-inline">Hồ bơi</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="TienIches" asp-action="Index" asp-route-id="1" class="nav-link px-0 align-middle text-white">
                                        <i class="bi bi-file-ruled-fill"></i><span class="ms-1 d-none d-sm-inline">Spa</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="TaiKhoans" asp-action="Index" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-person-fill-add"></i><span class="ms-1 d-none d-sm-inline">Tài khoản</span>
                            </a>
                        </li>
                    </ul>

                    <div class="mb-auto mt-auto">
                        <div class="text-center">
                            <a asp-controller="TaiKhoans" asp-action="Logout" class="text-white" style="text-decoration: none;">
                                <i class="bi bi-box-arrow-left"></i><span class="ms-1 d-none d-sm-inline">Đăng xuất</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            @* <div class="container">
            <main role="main" class="pb-3">
            @RenderBody()
            </main>
            </div> *@
            

            <div class="col py-3">
                    @RenderBody()
            </div>


        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>


