@model QuanLyChungCu.Models.TienIch

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Tạo mới thông tin tiện ích</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin tiện ích</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label">Id tiện ích</label>
                    <div class="col-sm-10">
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="TenTienIch" class="col-sm-2 col-form-label">Tên tiện ích</label>
                    <div class="col-sm-10">
                        <input asp-for="TenTienIch" class="form-control" />
                        <span asp-validation-for="TenTienIch" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Vitri" class="col-sm-2 col-form-label">Vị trí</label>
                    <div class="col-sm-10">
                        <input asp-for="Vitri" class="form-control" />
                        <span asp-validation-for="Vitri" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="GioMoCua" class="col-sm-2 col-form-label">Giờ mở cửa</label>
                    <div class="col-sm-10">
                        <input asp-for="GioMoCua" class="form-control" />
                        <span asp-validation-for="GioMoCua" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdNhanVien" class="col-sm-2 col-form-label">ID nhân viên</label>
                    <div class="col-sm-10">
                        <input asp-for="IdNhanVien" class="form-control" />
                        <span asp-validation-for="IdNhanVien" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
