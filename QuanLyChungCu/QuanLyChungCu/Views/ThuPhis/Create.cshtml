@model QuanLyChungCu.Models.ThuPhi

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Tạo mới thông tin thu phí</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin thu phí</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="IdThuPhi" class="col-sm-2 col-form-label">ID thu phí</label>
                    <div class="col-sm-10">
                        <input asp-for="IdThuPhi" class="form-control" />
                        <span asp-validation-for="IdThuPhi" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdDanCu" class="col-sm-2 col-form-label">ID dân cư</label>
                    <div class="col-sm-10">
                        <input asp-for="IdDanCu" class="form-control" />
                        <span asp-validation-for="IdDanCu" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ThoiGian" class="col-sm-2 col-form-label">Thời gian</label>
                    <div class="col-sm-10">
                        <input asp-for="ThoiGian" class="form-control" />
                        <span asp-validation-for="ThoiGian" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhiQuanLy" class="col-sm-2 col-form-label">Phí quản lý</label>
                    <div class="col-sm-10">
                        <input asp-for="PhiQuanLy" class="form-control" />
                        <span asp-validation-for="PhiQuanLy" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhiDien" class="col-sm-2 col-form-label">Phí điện</label>
                    <div class="col-sm-10">
                        <input asp-for="PhiDien" class="form-control" />
                        <span asp-validation-for="PhiDien" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhiNuoc" class="col-sm-2 col-form-label">Phí nước</label>
                    <div class="col-sm-10">
                        <input asp-for="PhiNuoc" class="form-control" />
                        <span asp-validation-for="PhiNuoc" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhiDichVu" class="col-sm-2 col-form-label">Phí dịch vụ</label>
                    <div class="col-sm-10">
                        <input asp-for="PhiDichVu" class="form-control" />
                        <span asp-validation-for="PhiDichVu" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhiGuiXe" class="col-sm-2 col-form-label">Phí gửi xe</label>
                    <div class="col-sm-10">
                        <input asp-for="PhiGuiXe" class="form-control" />
                        <span asp-validation-for="PhiGuiXe" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="NgayTao" class="col-sm-2 col-form-label">Ngày tạo</label>
                    <div class="col-sm-10">
                        <input asp-for="NgayTao" class="form-control" />
                        <span asp-validation-for="NgayTao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="TrangThai" class="col-sm-2 col-form-label">Trạng thái</label>
                    <div class="col-sm-10">
                        <input asp-for="TrangThai" class="form-control" />
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
