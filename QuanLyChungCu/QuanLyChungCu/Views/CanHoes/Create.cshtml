@model QuanLyChungCu.Models.CanHo

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Tạo mới căn hộ</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin căn hộ</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="form-group row">
                    <label asp-for="IdCanHo" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="IdCanHo" class="form-control" />
                        <span asp-validation-for="IdCanHo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="SoCanHo" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="SoCanHo" class="form-control" />
                        <span asp-validation-for="SoCanHo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Tang" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Tang" class="form-control" />
                        <span asp-validation-for="Tang" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DienTich" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="DienTich" class="form-control" />
                        <span asp-validation-for="DienTich" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LoaiCanHo" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="LoaiCanHo" class="form-control" />
                        <span asp-validation-for="LoaiCanHo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="TinhTrang" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="TinhTrang" class="form-control" />
                        <span asp-validation-for="TinhTrang" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdDanCu" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="IdDanCu" class="form-control" />
                        <span asp-validation-for="IdDanCu" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdHopDong" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="IdHopDong" class="form-control" />
                        <span asp-validation-for="IdHopDong" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Tạo</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>
