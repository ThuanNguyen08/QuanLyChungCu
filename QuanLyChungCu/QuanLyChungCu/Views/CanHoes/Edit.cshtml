@model QuanLyChungCu.Models.CanHo

@{
    ViewData["Title"] = "Edit";
    Layout = "_ManagerLayout";
}

<div class="container">
    <h1>Chỉnh sửa căn hộ</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin căn hộ</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdCanHo" />
                        <div class="form-group row">
                            <label asp-for="IdCanHo" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="IdCanHo" class="form-control" />
                                <span asp-validation-for="IdCanHo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SoCanHo" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="SoCanHo" class="form-control" />
                                <span asp-validation-for="SoCanHo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Tang" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Tang" class="form-control" />
                                <span asp-validation-for="Tang" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DienTich" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="DienTich" class="form-control" />
                                <span asp-validation-for="DienTich" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LoaiCanHo" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="LoaiCanHo" class="form-control" />
                                <span asp-validation-for="LoaiCanHo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="TinhTrang" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="TinhTrang" class="form-control" />
                                <span asp-validation-for="TinhTrang" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IdDanCu" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="IdDanCu" class="form-control" />
                                <span asp-validation-for="IdDanCu" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IdHopDong" class="col-sm-4 col-form-label control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="IdHopDong" class="form-control" />
                                <span asp-validation-for="IdHopDong" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-8 offset-sm-4">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
