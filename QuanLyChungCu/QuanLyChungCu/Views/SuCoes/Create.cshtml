@model QuanLyChungCu.Models.SuCo

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Tạo mới sự cố</h1>
    <div class="card">
        <div class="card-header">
            <h4>Thông tin sự cố</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label">Id sự cố</label>
                    <div class="col-sm-10">
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdCanHo" class="col-sm-2 col-form-label">ID Căn hộ</label>
                    <div class="col-sm-10">
                        <input asp-for="IdCanHo" class="form-control" />
                        <span asp-validation-for="IdCanHo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MoTaSuCo" class="col-sm-2 col-form-label">Mô tả sự cố</label>
                    <div class="col-sm-10">
                        <input asp-for="MoTaSuCo" class="form-control" />
                        <span asp-validation-for="MoTaSuCo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="NgayBaoCao" class="col-sm-2 col-form-label">Ngày báo cáo</label>
                    <div class="col-sm-10">
                        <input asp-for="NgayBaoCao" class="form-control" />
                        <span asp-validation-for="NgayBaoCao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="TrangThai" class="col-sm-2 col-form-label">Trạng thái</label>
                    <div class="col-sm-10">
                        <input asp-for="TrangThai" class="form-control" />
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IdNhanVien" class="col-sm-2 col-form-label">ID Nhân viên</label>
                    <div class="col-sm-10">
                        <input asp-for="IdNhanVien" class="form-control" />
                        <span asp-validation-for="IdNhanVien" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
